MODULE main


--VARIABLE DECLARATION SECTION --


VAR
-- OTHER ENVIRONMENTAL VARIABLES --
P_0 : boolean ;
P_1 : boolean ;

ue_state	:
{
	ue_1,
    unknown_id,
    P_0,
    1
};

DEFINE

ue_T1   :=	 (P_1)	;
ue_T2   :=	 (P_0)	;
ue_T3	:=	 (ue_state = ue_1)	;
ue_T4	:=	 (ue_state = 1)	;
ue_T5	:=	 (ue_state = P_0)	;

ASSIGN
init(ue_state) := unknown_id ;

next(ue_state):=
case
	ue_T1   :=	 ue_1	;
    ue_T2   :=	 ue_1	;
    ue_T3	:=	 unknown_id	;
    ue_T4	:=	 P_0	;
    ue_T5	:=	 1 ;
    TRUE := 
    {
        ue_1,
        unknown_id,
        P_0,
        1   
    } ;
esac;

LTLSPEC
G( P_0 ) -> G( P_1 ) ;